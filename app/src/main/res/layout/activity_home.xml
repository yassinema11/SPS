<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACB1D6"
    tools:context=".Home">

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        android:text="☢ BIENVENUE ☢ \n Smart Park Solutions"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/hello"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:text="Place 1 " />

            <TextView
                android:id="@+id/sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:text="Place 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imgs"
        android:layout_below="@id/hello"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:src="@drawable/imgcar" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:src="@drawable/imgcar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bouttons"
        android:layout_height="100dp"
        android:layout_below="@id/imgs"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:background="#FFEAD2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnp1"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Place 1\n Réservé">
        </Button>

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="#FFEAD2"
            android:id="@+id/btnp2"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Place 2\n Réservé">
        </Button>
    </LinearLayout>


    <Button
        android:id="@+id/buttonAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bouttons"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/history"
        android:text="\t \t Types de voitures \t \t "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/disconnect"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAll"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/history"
        android:text="\t Déconnecter \t"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />
    
</RelativeLayout>