<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    tools:context=".CreerCompte">

    <TextView
        android:id="@+id/creer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:text="Creer votre Compte !"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/creerlogin"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="260dp"
        android:layout_below="@id/creer"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/input"
        android:hint="Nom d'utilisateur"
        android:layout_marginLeft="30dp"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/creerpass"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@id/creerlogin"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:hint="Mot de Passe"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="textPassword"
        android:gravity="center"
        />

    <Button
        android:id="@+id/creerac"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/creerpass"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Creer mon Compte"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creerac"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Se Connecter" />

</RelativeLayout>